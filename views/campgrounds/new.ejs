<% layout('layouts/boilerplate') %>
    <h1>Create New Campground</h1>
    <form action="/campgrounds" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="campground[title]" required>
        <br>
        <label for="location">Location:</label>
        <input type="text" id="location" name="campground[location]" required>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="campground[description]" required></textarea>
        <br>
        <label for="price">Price:</label>
        <input type="text" id="price" name="campground[price]" required>
        <br>
        <button>Create Campground</button>
    </form>